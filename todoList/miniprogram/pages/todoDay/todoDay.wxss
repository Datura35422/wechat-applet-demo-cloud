.menu-wrap {
  padding: 0 20rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.menu-date {
  flex: 0 0 150rpx;
  height: 100%;
  width: 150rpx;
  text-align: center;
}

.menu-todo {
  flex: 1;
  height: 100%;
  text-align: center;
  border-left: 2rpx dotted #C1C5C8;
}

.list-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.list-item {
  padding: 0 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  box-sizing: border-box;
}

.list-date {
  flex: 0 0 150rpx;
  position: relative;
  width: 150rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.list-date::after {
  content: '';
  position: absolute;
  right: -14rpx;
  top: 50%;
  height: 14rpx;
  width: 14rpx;
  transform: translateX(-50%);
  background-color: #7E8EE3;
  border-radius: 50%;
  border: 2rpx solid #7E8EE3;
  box-sizing: border-box;
  z-index: 10;
}

.list-content {
  flex: 1;
  padding-left: 20rpx;
  border-left: 2rpx dotted #C1C5C8;
  box-sizing: border-box;
}

.item-content {
  margin-bottom: 20rpx;
  padding: 14rpx;
  min-height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10rpx;
}

.list-text {
  flex: 1;
  padding-right: 10rpx;
  word-break: break-all;
  font-size: 32rpx;
  color: rgba(255, 255, 255, .8);
  box-sizing: border-box;
}

.icon-status {
  flex: 0 0 48rpx;
  width: 48rpx;
  height: 48rpx;
}