.note-options__wrapper {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
}

.note-options__mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .4);
}

.note-options {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.note-option {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 50%;
}

.icon-option {
  width: 64rpx;
  height: 64rpx;
}

.btn-add {
  z-index: 999;
}

.btn-animation {
  transform: rotate(0);
  animation: spin .3s ease-in .1s forwards;
}
@keyframes spin{
  100% { transform: rotate(-45deg); }
}

.btn-animation-out {
  transform: rotate(-45deg);
  animation: spinOut .3s ease-in forwards;
}
@keyframes spinOut{
  100% { transform: rotate(0); }
}

@keyframes showIn {
  from {
    opacity: 0;
  }

  to {
    transform: scale(1) translate3d(0, 0, 0);
  }
}
