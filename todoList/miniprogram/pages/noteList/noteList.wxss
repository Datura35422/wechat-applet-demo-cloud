.note-options__wrapper {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
}

.note-options__mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .4);
}

.note-options {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.note-option {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 50%;
}

.icon-option {
  width: 64rpx;
  height: 64rpx;
}

