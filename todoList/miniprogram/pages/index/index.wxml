<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
    <view bindtap="onGetOpenid">{{openid ? 'openid:' + openid : '未登录'}}</view>
  </view>
  <view class="menu-container">
    <view class="ripple {{animation.one}} menu-item menu-one">一</view>
    <view class="ripple {{animation.two}} menu-item menu-two">二</view>
    <view class="ripple {{animation.three}} menu-item menu-three">三</view>
    <view class="ripple {{animation.four}} menu-item menu-four">四</view>
  </view>
</view>
