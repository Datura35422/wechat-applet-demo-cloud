/* lib */
.strong{
  font-weight: bold;
}
.tc{
  text-align: center;
}

.ellipsis {
  text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}

.break {
  word-break: break-all;
}

/* button */
.btn-add {
  position: fixed;
  left: 50%;
  bottom: 60rpx;
  width: 90rpx;
  height: 90rpx;
  margin-left: -45rpx;
  border-radius: 50%;
  font-size: 60rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #fff;
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
  color: #333;
}

.btn-red {
  margin: 60rpx auto;
  width: 500rpx;
  color: #fff;
  background-color: #DF7F7C;
}

