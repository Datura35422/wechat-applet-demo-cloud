.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .4);
  z-index: -10;
}

.modal-content {
  padding: 30rpx 24rpx;
  width: 500rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.modal-content__title {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #b2b2b2;
}

.modal-content__input {
  margin-bottom: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx dotted #9DD1BE;
}

.modal-content__buttons {
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.modal-content__cancel, .modal-content__confirm {
  height: 60rpx;
  width: 160rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
}

.modal-content__cancel {
  background-color: #9DD1BE;
}

.modal-content__confirm {
  background-color: #DF7F7C;
}