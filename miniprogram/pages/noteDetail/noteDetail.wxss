.container {
  width: 100vw;
}

.note-detail__title {
  margin: 0 auto;
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx dashed #ccc;
}

.note-detail__content {
  margin-top: 20rpx;
  padding: 16rpx;
  width: 100%;
  min-height: 40vh;
  height: auto;
  word-break: break-all;
  box-sizing: border-box;
  background-color: #fff;
}